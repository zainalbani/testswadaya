<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="174dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/bg_news"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_news"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/iv_image"
        app:shapeAppearanceOverlay="@style/Rounded_5" />


    <TextView
        android:id="@+id/tv_name_news"
        style="@style/Medium_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/black_500"
        tools:ignore="SmallSp"
        tools:text="Name" />


    <TextView
        android:id="@+id/tv_published_at"
        style="@style/Regular_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="10dp"
        android:textColor="@color/black_500"
        tools:ignore="SmallSp"
        tools:text="PublishedAt" />

    <TextView
        android:id="@+id/tv_title_news"
        style="@style/Semibold_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:justificationMode="inter_word"
        android:maxLines="3"
        android:textColor="@color/black_500"
        tools:ignore="SmallSp"
        tools:text="Title" />

    <TextView
        android:id="@+id/tv_description_news"
        style="@style/Regular_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:justificationMode="inter_word"
        android:maxLines="1"
        android:textColor="@color/black_500"
        tools:ignore="SmallSp"
        tools:text="Description" />

    <TextView
        android:id="@+id/tv_author_news"
        style="@style/Regular_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/black_500"
        tools:ignore="SmallSp"
        tools:text="Author" />


</LinearLayout>